{
  "name": "nakimeweb",
  "version": "1.0.0",
  "description": "Portfolio giới thiệu bản thân Nguyễn Thanh Trúc với hiệu ứng animation đẹp, Express, TypeScript, chế độ sáng tối, tông màu hồng.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc && npm run copy-assets",
    "start": "node dist/server.js",
    "clean": "shx rm -rf dist",
    "copy-assets": "shx cp -r public/* dist/",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy-assets"
  },
  "author": "Nguyễn Thanh Trúc",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "nodemon": "^3.0.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
